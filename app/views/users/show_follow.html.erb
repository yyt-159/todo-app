<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1><%= @user.name %></h1>
      <span><%= link_to "view my profile", @user %></span>
    </section>
    <section class="stats">
    <% if @user == @current_user %>
      <%= render 'layouts/current_user_stats' %>
    <% else %>
      <%= render 'layouts/stats' %>
    <% end %>
    </section>
  </aside>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul class="users follow">
        <%= render 'user' %>
      </ul>
    <% end %>
  </div>
</div>